{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:svelte/recommended"

    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "extraFileExtensions": [".svelte"]
    },
    "overrides": [
        {
          "files": ["*.svelte"],
          "parser": "svelte-eslint-parser",
          "parserOptions": {
            "parser": "@typescript-eslint/parser"
          }
        }
      ],
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-svelte"
    ],
    "rules": {
      "semi": ["error", "always"]
    }
}
